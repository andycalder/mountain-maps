<%# Navbar %>
<div class="container-fluid m-0 p-0">
  <nav class="navbar navbar-expand-sm">
    <%= link_to mountains_path do %>
     <%= image_tag "logo.png", class: "logo" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# Collapse %>
    <div class="collapse navbar-collapse right-navbar">
      <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
      <% if current_user %>
        <%= link_to "Sign Out", destroy_user_session_path, class: 'btn btn-sign-out', method: :delete %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-sign-up" %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-sign-in" %>
      <% end %>
    </div>
  </nav>
</div>
<%# End %>
